---
import { Image } from "astro:assets";
import AccessoriesImage from "./AccessoriesImage.astro";
const { accessory, index } = Astro.props;
import RedirectIcon from "../assets/shop-redirect-icon.svg";

const {
  image_url,
  hashtag = "#EthnicLuncheon",
  is_dm = true,
  buy_link = "",
  price = 1200,
  buy_tagline = "Buy The Sports Bra",
  dm_tagline = "DM To Buy This Dress",
  dm_link = "",
} = accessory;

const isEven = (index + 1) % 2 == 0;
---

<div
  class=`flex self-center items-end max-w-[595px] w-full gap-12 justify-center ${isEven ? "flex-row-reverse": ""}`
>
  <div class=`flex  items-center  ${isEven ? "flex-col-reverse": "flex-col"}`>
    <AccessoriesImage image_url={image_url} alt={hashtag} />
    <div class="text-bold-pink text-base font-semibold">{hashtag}</div>
  </div>
  <div
    class="flex flex-col h-full gap-9 text-[17px] font-followers h-[380px] justify-center"
  >
    {
      buy_tagline && (
        <div class="flex flex-col drop-shadow-xl">
          <a
            class="bg-dark-pink rounded-full px-4 py-3 z-10 w-max flex gap-2"
            href={buy_link}
            target="_blank"
          >
            {buy_tagline}
            <Image src={RedirectIcon} alt="redirect-icon" />
          </a>
          <div class="bg-[#fff] rounded-full px-4 py-3 w-max ml-auto -mt-2 -mr-2">
            Rs. {price}
          </div>
        </div>
      )
    }
    {
      is_dm && (
        <a
          class="bg-dark-pink rounded-full px-4 py-3 drop-shadow-xl ml-2 flex gap-2"
          target="_blank"
        >
          {dm_tagline}
          <Image src={RedirectIcon} alt="redirect-icon" />
        </a>
      )
    }
  </div>
</div>
