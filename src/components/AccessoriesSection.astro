---
import EachAccessories from "./EachAccessories.astro";
import BgSpiralImage from "./BgSpiralImage.astro";
const { accessories, name } = Astro.props;
---

<div class="pt-12 pb-20 flex w-full flex-col gap-6">
  {
    accessories?.map((acc, index) => (
      <>
        <EachAccessories accessory={acc} index={index} name={name}/>
        {index === 1 && <BgSpiralImage order="2" />}
        {index === 3 && <BgSpiralImage order="3" />}
      </>
    ))
  }
</div>
