---
import Layout from "../layouts/BaseLayout.astro";
import InfluencerLayout from "../layouts/InfluencerLayout.astro";
import { ViewTransitions } from 'astro:transitions';

import { getCollection } from "astro:content";

const allInFluencers = await getCollection("influencer");
const sortedInfluencers = allInFluencers?.sort(
  (a, b) => a?.data?.order - b?.data?.order
);
---
<ViewTransitions />
<Layout title="Wisifie.com">
  {
    sortedInfluencers?.map((influencer) => (
      <InfluencerLayout influencer={influencer} />
    ))
  }
</Layout>

<style>
  main {
    margin: auto;
    padding: 1rem;
    width: 800px;
    max-width: calc(100% - 2rem);
    color: #000;
    font-size: 20px;
    line-height: 1.6;
  }
</style>
